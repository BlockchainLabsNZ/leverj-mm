{
  "version": "0.0.4",
  "packages": [
    "packages/*"
  ],
  "script": {
    "test": "NODE_ENV=test mocha --recursive --exit specs"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/test/**",
    "**/bin/**",
    "**/deployment/**",
    "**/.*",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "allowBranch": "dev"
    }
  }
}
